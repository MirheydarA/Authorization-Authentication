@using Fiorello.Areas.Admin.ViewModels.Product
@using Fiorello.Enum
@model ProductUpdateVM
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Update Product</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="update" asp-controller="product" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name"></input>
                    <span asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input class="form-control" asp-for="Title"></input>
                    <span asp-validation-for="Title"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input class="form-control" asp-for="Description"></input>
                    <span asp-validation-for="Description"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AdditionalInfo"></label>
                    <input class="form-control" asp-for="AdditionalInfo"></input>
                    <span asp-validation-for="AdditionalInfo"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input class="form-control" asp-for="Price"></input>
                    <span asp-validation-for="Price"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductStatusType" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="ProductStatusType" asp-items="@Html.GetEnumSelectList<ProductStatus>()">
                            <option selected="selected" value="">Please select</option>
                        </select>
                        <span asp-validation-for="ProductStatusType" class="text-danger" />
                    </div>
                </div>

                <div class="form-group">
                    <img class="w-25" src="~/assets/img/@Model.PhotoName"/>
                    <div>
                    <label asp-for="Photo"></label>
                    <input class="form-control" asp-for="Photo"></input>
                    </div>
                    <span asp-validation-for="Photo"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Photos"></label>
                    <input class="form-control" asp-for="Photos"></input>
                    <span asp-validation-for="Photos"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductCategoryId"></label>
                    <select asp-for="ProductCategoryId" asp-items="Model.ProductCategories" class="form-select" aria-label="Default select example">
                        <option selected>Product Category Id</option>
                    </select>
                    <span asp-validation-for="ProductCategoryId"></span>
                </div>

                

                    <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Actions</th>  
                        </tr>
                    </thead
                    <tbody>
                        @if (Model.Photos is not null)
                                {
                        @foreach (var photo in Model.Photos)
                        {
                        <tr>
                            <td>@photo.Name</td>
                            <td>
                                <a asp-action="Delete" asp-controller="product"  class="btn btn-danger btn-delete">Delete</a>
                                <a asp-action="Update" asp-controller="product"  class="btn btn-primary">Update</a>
                            </td>
                        </tr>
                            
                        }
                                    
                                }
                    </tbody>
                </table>
            </div>
        </div>
                

                <button class="btn btn-primary" type="submit">Update</button>
            </form>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
